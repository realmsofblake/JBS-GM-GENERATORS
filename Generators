  <!-- Name Generator -->
  <div class="generator">
    <h2>ðŸ‘¨ Male Name Generator</h2>
    <p id="maleNameResult">Click to generate a name</p>
    <button onclick="generateMaleName()">Generate</button>
  </div>

  <!-- Motivation Generator -->
  <div class="generator">
    <h2>ðŸŽ¯ NPC Motivation</h2>
    <p id="motivationResult">Click to generate a motivation</p>
    <button onclick="generateMotivation()">Generate</button>
  </div>

  <!-- Weather Generator -->
  <div class="generator">
    <h2>â›… Weather</h2>
    <p id="weatherResult">Click to generate weather</p>
    <button onclick="generateWeather()">Generate</button>
  </div>

  <script>
    const maleNames = ["Tharn", "Ulric", "Borin", "Kael", "Draven"];
    const motivations = ["Revenge against a past enemy", "Desire for immortality", "To protect a sacred place", "Seeking lost family", "Fulfilling a prophecy"];
    const weatherOptions = ["Clear skies", "Thunderstorm", "Foggy morning", "Blistering heat", "Heavy snowfall"];

    function generateMaleName() {
      const name = maleNames[Math.floor(Math.random() * maleNames.length)];
      document.getElementById("maleNameResult").textContent = name;
    }

    function generateMotivation() {
      const motivation = motivations[Math.floor(Math.random() * motivations.length)];
      document.getElementById("motivationResult").textContent = motivation;
    }

    function generateWeather() {
      const weather = weatherOptions[Math.floor(Math.random() * weatherOptions.length)];
      document.getElementById("weatherResult").textContent = weather;
    }
  </script>

